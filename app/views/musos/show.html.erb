<div class="test-blend">
  <div class="muso-content">
    <div class="muso-header">
      <div class="muso-header-left">
        <h2><%= @muso.name %> <span class="stars"> &#9733; &#9733; &#9733; &#9733; &#9733;</span></h2>
        <!--<h2><%= @muso.name %> <div id="rateYo-average"></div></h2>-->
        <%# <%= image_tag(@muso.avatar.thumb.url)  %>
        <p>$<%= @muso.base_price %>/hr</p>
        <p><%= @muso.location %></p>
        
      </div>
      <div class="muso-header-right">
        <% if current_muso && current_muso.id == session[:muso_id] %>
          <button class="contact-muso-btn">edit</button>
        <% else %>
          <button class="contact-muso-btn">contact</button>
        <% end %>
      </div>
    </div>
    <div>
      <p><%= @muso.bio %></p>
    </div>

    <div class="tag-container">
      <% @muso.tag_list.each do |tag| %>
        <span class="tag-btn"><%= tag %></span>

      <% end %>
    </div>


    <div class="muso-media-wrapper">
      <%= render "musos/partials/gallery" %>
      <div class="muso-embed">
        <% @muso_embed.each do |muso| %>
          <div class="embed-container">
            <% if muso.url.include? 'youtube' %>
              <iframe class="youtube-embed" src="<%= muso.url.sub('watch?v=', 'embed/') %>?rel=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            <% else %>
              <div class="soundcloud-embed">
                <%= muso.url.sub('<iframe width="100%" height="300"', '<iframe width="50%" height="80"').html_safe %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <%= render "musos/partials/reviews" %>

  </div>
</div>

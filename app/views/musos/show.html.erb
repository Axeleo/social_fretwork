<h2><%= @muso.name %></h2>

<%# <%= image_tag(@muso.avatar.thumb.url)  %>
<p><%= @muso.base_price %></p>
<p><%= @muso.location %></p>
<p><%= @muso.bio %></p>

<% @muso_embed.each do |muso| %>

  <% if muso.url.include? 'youtube' %>
    <iframe width="560" height="315" src="<%= muso.url.sub('watch?v=', 'embed/') %>?rel=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  <% else %>

  <%= muso.url.sub('<iframe width="100%" height="300"', '<iframe width="50%" height="80"').html_safe %>

  <% end %>

<% end %>

<%= render "musos/partials/gallery" %>


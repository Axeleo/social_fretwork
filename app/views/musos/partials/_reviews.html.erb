<div class="review-header">
    <div>
        <p>2 Reviews <span>&#9733;&#9733;&#9733;&#9733;&#9733;</span></p>

    </div>
    <div>
        <p>Sort?</p>
    </div>
</div>

<% @muso.muso_reviews.each do |review| %>
    <div class="review-box">
        <div class="host-avatar">
        </div>
        <div class="review-deets">
            <div class="review-title">
                <div id="rateYo-<%= review.id %>"></div>
                <p><%= review.job.host.name %></p>
            </div>
            <div>
                <p><%= review.comment %></p>
                <small><%= review.created_at %></small>
            </div>
        </div>
    </div>
    <script>
            $("#rateYo-<%= review.id %>").rateYo({
                rating: <%= review.rating %>,
                readOnly: true
            });
    </script>
<% end %>


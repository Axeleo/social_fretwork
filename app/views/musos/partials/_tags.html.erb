<%= form_tag "/musos/#{@muso.id}/tags", method: "post" do %>
    
    <input type="hidden" name="muso_id" value="<%= @muso.id %>">
    <label for="tags">Tags</label>
    <textarea class="tag-input" name="tags"></textarea>


    <button class="save-tag-btn">Save my Tags!</button>
<% end %>

<div class="tags-flex">
    <% @muso.tag_list.each do |tag| %>

        <span class="tag-btn-edit">
            <%= tag %>
            <%#= form_tag "/musos/#{@muso.id}/tags", method: "delete" do %>
            <%= form_tag "/musos/#{@muso.id}/tags", method: "delete", class: 'form-inline' do %>
                <input type="hidden" name="tag" value="<%= tag %>">
                <button class="cross-btn">X</button>
            <% end %>
        
        </span>


    <% end %>
</div>



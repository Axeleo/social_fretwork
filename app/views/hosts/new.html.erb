<div class="force-height">
    <div class="login-title">
        <h2>Sign up to be a host</h2>
    </div>

    <div class="box-container">
        <% @host.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>

        <%= form_tag "/hosts", method: "post" do %>

            <label for="host[name]">name</label>
            <input class="input-box" type="text" name="host[name]">

            <label for="host[email]">email</label>
            <input class="input-box" type="email" name="host[email]">

            <label for="host[password]">password</label>
            <input class="input-box" type="password" name="host[password]" >

            <button class="submit-btn">Join up!</button>
        <% end %>
    </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>SocialFretwork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
    <%= javascript_include_tag 'application' %>
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
  </head>
    
  <body>
    
    <nav class="menu menu--miranda">
      <ul class="main-nav">
          <% if !logged_in? %>
            <div class="left-nav">
              <li class="nav-link menu__item menu__item--current"><a class="menu__link" href='#'>browse musos</a></li>
              <li class="nav-link menu__item"><a class="menu__link" href='#'>about us</a></li>
            </div>
            <div class="home-nav">
              <li><a href='#'>SOCIAL FRETWORK</a></li>
            </div>
            <div class="right-nav">
              <li class="nav-link menu__item"><a class="menu__link" href='#'>be a muso</a></li>

          <% elsif which_user == current_host %>
            <div class="left-nav">
              <li class="nav-link menu__item menu__item--current"><a class="menu__link" href='#'>browse musos</a></li>
              <li class="nav-link menu__item"><a class="menu__link" href='#'>my events</a></li>
            </div>
            <div class="home-nav">
              <li><a href='#'>SOCIAL FRETWORK</a></li>
            </div>
            <div class="right-nav">
              <li class="nav-link menu__item"><a class="menu__link" href='#'>view profile</a></li>

          <% else %>
            <div class="left-nav">
              <li class="nav-link menu__item menu__item--current"><a class="menu__link" href='#'>browse jobs</a></li>
              <li class="nav-link menu__item"><a class="menu__link" href='#'>my jobs</a></li>
            </div>
            <div class="home-nav">
              <li><a href='#'>SOCIAL FRETWORK</a></li>
            </div>
            <div class="right-nav">
              <li class="nav-link menu__item"><a class="menu__link" href='#'>view profile</a></li>
              
          <% end %>

                      



            <%# <li><a href='#'>avatar stuff</a></li> %>
            <li class="user-stuff">
              <% if logged_in? %>
                <small>logged in as:</small>
                <p><%= which_user.name %> </p>

                <form action="/session" method="post">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                  <input type="hidden" name="_method" value="delete">
                  <button class="logout-btn">logout</button>
                </form>

              <% else %>
                <form action="/login" method="get">
                  <button class="login-btn">login</button>
                </form>
                <form action="/signup" method="get">
                  <button class="signup-btn">signup</button>
                </form>
              <% end %>
        
                
            </li>

          </div>
      </ul>
    </nav>
    
    <div class="gradient-bg">
      <%= yield %>
    </div>
  
    <footer>
      <p>I'm a footer</p>
    </footer>
  </body>
</html>

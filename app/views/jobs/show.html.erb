<div class="job-listing-full">
  <h3><%= @job.title %></h3>
  <div class="job-info">
    <span><%= @job.date_time %></span>
    <span><%= @job.location %></span>
    <span><%= @job.filled %></span>
    <span><%= @job.complete %></span>
    <span><%= @job.budget %></span>
  </div>
  <p>
    <%= @job.description %>
  </p>

  <% if !!current_muso %>
    <%= render "jobs/partials/muso_apply"  %>
    <%= render "jobs/partials/muso_application" %>
  <% end  %>
  <% if @job.host == current_host %>
    <%= render "jobs/partials/mark_complete" %>
    <%= render "jobs/partials/host_view_applications" %>
  <% end %>

  <div class="application-count">
  <p>Current Applications: <%= @job.job_applications.count %></p>
  </div>

</div>


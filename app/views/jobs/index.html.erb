<h1>Job listings</h1>

<div class="sort">
  <%= render "jobs/partials/host_filters" if !!current_host %>
</div>

<%# Search partial should be rendered here %>
<div class="all-job-listings">
  <% @jobs.each do |job|  %>
  <a href="/jobs/<%=job.id%>">
    <article>
      <div class="job-left">
        <h4><%= job.title %></h4>
        <span class="job-location-date"><%= job.location %></span><%= job.date_time.to_formatted_s(:short)%>
      </div>
      <div class='job-right'>
        <span class="job-budget">$ <%= job.budget %></span>
        <span class="job-host"><%= job.host.name %></span>
        <%# <span> ADD TAGS </span> %>
      </div>
    </article>
    </a>
  <% end %>
</div>

